# Backend Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ================================
# MongoDB Configuration (Required)
# ================================
# Get this from MongoDB Atlas: https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/real_estate_db?retryWrites=true&w=majority

# ================================
# Server Configuration
# ================================
# Port for the backend server (default: 5008)
PORT=5008

# Environment (development, production, test)
NODE_ENV=development

# ================================
# AI Server Configuration
# ================================
# URL for the AI server (if running separately)
AI_SERVER_URL=http://localhost:8000

# Optional: hosted AI provider (if you have an API endpoint and key)
# AI_PROVIDER_URL=https://inference.example.com/generate
# AI_API_KEY=your_api_key_here

# ================================
# API Configuration
# ================================
# Maximum request size (optional)
MAX_REQUEST_SIZE=10mb

# ================================
# CORS Configuration
# ================================
# Allowed origins for CORS (optional)
CORS_ORIGIN=http://localhost:5173

# ================================
# Example Values (DO NOT USE IN PRODUCTION)
# ================================
# MONGODB_URI=mongodb+srv://demo_user:demo_password@cluster0.xxxxx.mongodb.net/real_estate_chatbot?retryWrites=true&w=majority
# PORT=5008
# NODE_ENV=development
# AI_SERVER_URL=http://localhost:8000
